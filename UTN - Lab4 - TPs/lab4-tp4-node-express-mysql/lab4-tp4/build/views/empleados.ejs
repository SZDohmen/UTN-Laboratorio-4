<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
</head>

<body>
<div class="container justify-content-center">
    <h2> Lista de Empleados</h2>

    <form method="GET" action="/new" class="d-flex my-2">
        <button class="btn btn-secondary">Nuevo Empleado</button>
    </form>

    <div>
        <% if(empleados.length> 0){ %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Legajo</th>
                        <th>Apellido</th>
                        <th>Nombre</th>
                        <th>Dni</th>
                        <th>Sector</th>
                        <th>Fecha Ingreso</th>
                        <th>Activo</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    <% empleados.forEach( empleado => { %>
                        <tr>
                            <td> <%= empleado.legajo %> </td>
                            <td> <%= empleado.apellido %> </td>
                            <td> <%= empleado.nombre %> </td>
                            <td> <%= empleado.dni %> </td>
                            <td> <%= empleado.sector %> </td>
                            <td> <%= empleado.fecha_ingreso.toLocaleDateString() %> </td>
                            <td> <%= empleado.activo ? 'SI' : 'NO' %> </td>
                            <td class="d-flex">
                                <form method="GET" action="/empleado/<%= empleado.legajo %>/modificar" class="mr-1">
                                    <button class="btn btn-success">Editar</button>
                                </form>
                                <form method="GET" action="/empleado/<%= empleado.legajo %>" class="mr-1">
                                    <button class="btn btn-info">Ver</button>
                                </form>
                                <form method="POST" action="/empleado/<%= empleado.legajo %>/delete" class="mr-1">
                                    <button class="btn btn-danger">Eliminar</button>
                                </form>                                
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %> <h2>No hay empleados</h2> <% } %>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>